@page
@model CalendarModel
@{
    ViewData["Title"] = "行事曆";
}

<div class="row">
    <div class="d-flex ms-3 align-items-end">
        <h4 class="mb-0 font-weight-bolder">行事曆</h4>
    </div>
</div>

<!-- Success/Result Message -->
@if (!string.IsNullOrEmpty(Model.SuccessMessage))
{
    <div class="row mt-3 justify-content-center">
        <div class="col-12">
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i>
                @Model.SuccessMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
    </div>
}

<!-- Error/Result Message -->
@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="row mt-3 justify-content-center">
        <div class="col-12">
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i>
                @Model.ErrorMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
    </div>
}

<!-- Add Dropdown control to select year -->
<div class="row mt-3 justify-content-center">
    <div class="col-12">
        <div class="form-group d-flex align-items-center">
            <label class="text-nowrap ms-1 mb-0 me-1">選擇年份:</label>
            <select class="form-control w-auto ms-1 me-1 px-2" id="yearDropdown" asp-for="SelectedYear">
                @foreach (var year in Model.AvailableYears)
                {
                    <option value="@year">@year</option>
                }
            </select>
        </div>
    </div>
</div>



<!-- CSV File Upload Section -->
<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex">
                <h6 class="mb-0">上傳行事曆 CSV 檔案</h6>
                <span class="mb-0 ms-2 small text-secondary">(下載自<a href="https://data.gov.tw/dataset/14718" class="link-primary" target="_blank">政府行政機關辦公日曆表</a>. 請確認檔案格式正確再上傳)</span>
            </div>        
            <div class="card-body">
                <form method="post" enctype="multipart/form-data" asp-page-handler="SubmitCSV">
                    <div class="d d-flex mb-3 align-items-center">                        
                        <label for="csvFile" class="form-label text-nowrap mb-0">選擇 CSV 檔案</label>    
                        <input type="file" class="form-control border mb-0 ms-3" accept=".csv" asp-for="UploadFile" required>
                        <button type="reset" class="btn btn-secondary mb-0 ms-3 d-inline-flex align-items-center text-nowrap">
                            <i class="fas fa-times ms-0 me-4"> 清除</i>
                        </button>
                        <button type="submit" class="btn btn-primary mb-0 ms-3 d-inline-flex align-items-center text-nowrap">
                            <i class="fas fa-arrow-up-from-bracket ms-0 me-4"> 上傳檔案</i>
                        </button>
                    </div>
                    
                    <!-- Overwrite Checkbox Row - Aligned with upload controls -->
                    <div class="d-flex align-items-center">
                       <div class="form-check mb-0">
                            <input class="form-check-input" type="checkbox" asp-for="OverwriteExisting" id="overwriteCheckbox">
                            <label class="form-check-label" for="overwriteCheckbox">
                                <i class="fas fa-sync-alt me-2 text-warning"></i>
                                覆寫已存在的資料
                            </label>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
