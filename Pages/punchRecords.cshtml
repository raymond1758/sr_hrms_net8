@page
@using System.Data
@model PunchRecordsModel
@{    
    ViewData["Title"] = "打卡記錄";
}

<div class="row">
    <div class="d-flex ms-3 align-items-end">
        <h4 class="mb-0 font-weight-bolder">打卡記錄</h4>
        <button type="button" class="btn btn-primary ms-auto me-3 mb-0" data-bs-toggle="modal" data-bs-target="#uploadModal">
            <i class="fas fa-upload me-2"></i>上傳 CSV
        </button>
    </div>
</div>

<!-- Filter and Pagination Controls -->
<div class="row mt-3">
    <div class="col-12">
        <div class="card">
            <div class="card-body py-2">
                <div class="d-flex align-items-center justify-content-between flex-wrap">
                    <div class="d-flex align-items-center flex-wrap">
                        <form method="post" id="filterForm" style="display: inline-block;" class="me-3 mb-2">
                            <input type="hidden" name="page" value="1" />
                            <input type="hidden" name="pageSize" value="@Model.PageSize" />
                            <div class="d-flex align-items-center">
                                <div class="input-group input-group-sm me-2 border" style="width: 200px;">
                                    <input type="text" name="filter" value="@(Model.Filter ?? "")" 
                                           class="form-control form-control-sm" 
                                           placeholder="篩選員工編號/姓名/部門"
                                           title="可同時搜尋員工編號、中文姓名、部門，按 Enter 後自動搜尋"
                                           onchange="document.getElementById('filterForm').submit()"
                                           onkeypress="if(event.key==='Enter'){document.getElementById('filterForm').submit()}" />
                                </div>
                                <div>
                                    <small class="text-muted me-3 mb-2">工作日:</small>
                                </div>
                                <div class="me-2 position-relative">
                                    <input type="date" name="startDate" value="@(Model.StartDate?.ToString("yyyy-MM-dd") ?? "")" 
                                           class="form-control form-control-sm border pe-4" 
                                           placeholder="開始日期"
                                           title="開始日期"
                                           onchange="document.getElementById('filterForm').submit()" />
                                    <button type="button" class="btn btn-sm position-absolute top-50 end-0 translate-middle-y me-1" 
                                            style="border: none; background: none; padding: 0; width: 20px; height: 20px;" 
                                            onclick="clearStartDate()" title="清除開始日期">
                                        <i class="fas fa-eraser text-muted" style="font-size: 12px;"></i>
                                    </button>
                                </div>
                                <div class="me-2 position-relative">
                                    <input type="date" name="endDate" value="@(Model.EndDate?.ToString("yyyy-MM-dd") ?? "")" 
                                           class="form-control form-control-sm border pe-4" 
                                           placeholder="結束日期"
                                           title="結束日期"
                                           onchange="document.getElementById('filterForm').submit()" />
                                    <button type="button" class="btn btn-sm position-absolute top-50 end-0 translate-middle-y me-1" 
                                            style="border: none; background: none; padding: 0; width: 20px; height: 20px;" 
                                            onclick="clearEndDate()" title="清除結束日期">
                                        <i class="fas fa-eraser text-muted" style="font-size: 12px;"></i>
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                        
                    <div class="d-flex align-items-center flex-wrap">
                        @if (Model.PunchRecordData != null && Model.TotalRecords > 0)
                        {
                            <small class="text-muted me-3 mb-2">
                                顯示 @((Model.CurrentPage - 1) * Model.PageSize + 1) - @(Math.Min(Model.CurrentPage * Model.PageSize, Model.TotalRecords)) 筆，共 @Model.TotalRecords 筆資料
                            </small>
                            <form method="post" id="pageSizeForm" style="display: inline-block;" class="mb-2">
                                <input type="hidden" name="page" value="1" />
                                <input type="hidden" name="filter" value="@(Model.Filter ?? "")" />
                                <input type="hidden" name="startDate" value="@(Model.StartDate?.ToString("yyyy-MM-dd") ?? "")" />
                                <input type="hidden" name="endDate" value="@(Model.EndDate?.ToString("yyyy-MM-dd") ?? "")" />
                                <select class="form-select form-select-sm me-3" name="pageSize" style="width: auto;" onchange="document.getElementById('pageSizeForm').submit()">
                                    @{
                                        var pageSizes = new[] { 10, 25, 50, 100 };
                                        foreach (var size in pageSizes)
                                        {
                                            <option value="@size" selected="@(Model.PageSize == size)">@size 筆/頁</option>
                                        }
                                    }
                                </select>
                            </form>
                        }                        
                        @if (Model.TotalPages > 1)
                        {
                            <nav aria-label="分頁導航" class="me-3">
                                <ul class="pagination pagination-sm mb-0">
                                    <li class="page-item @(!Model.HasPrevious ? "disabled" : "")">
                                        <form method="post" style="display: inline-block;">
                                            <input type="hidden" name="page" value="1" />
                                            <input type="hidden" name="pageSize" value="@Model.PageSize" />
                                            <input type="hidden" name="filter" value="@(Model.Filter ?? "")" />
                                            <input type="hidden" name="startDate" value="@(Model.StartDate?.ToString("yyyy-MM-dd") ?? "")" />
                                            <input type="hidden" name="endDate" value="@(Model.EndDate?.ToString("yyyy-MM-dd") ?? "")" />
                                            <button type="submit" class="page-link" tabindex="-1" @(!Model.HasPrevious ? "disabled" : "")>
                                                <i class="fas fa-angle-double-left"></i>
                                            </button>
                                        </form>
                                    </li>
                                    <li class="page-item @(!Model.HasPrevious ? "disabled" : "")">
                                        <form method="post" style="display: inline-block;">
                                            <input type="hidden" name="page" value="@(Model.CurrentPage - 1)" />
                                            <input type="hidden" name="pageSize" value="@Model.PageSize" />
                                            <input type="hidden" name="filter" value="@(Model.Filter ?? "")" />
                                            <input type="hidden" name="startDate" value="@(Model.StartDate?.ToString("yyyy-MM-dd") ?? "")" />
                                            <input type="hidden" name="endDate" value="@(Model.EndDate?.ToString("yyyy-MM-dd") ?? "")" />
                                            <button type="submit" class="page-link" tabindex="-1" @(!Model.HasPrevious ? "disabled" : "")>
                                                <i class="fas fa-angle-left"></i>
                                            </button>
                                        </form>
                                    </li>
                                    
                                    <li class="page-item">
                                        <form method="post" id="pageSelectForm" style="display: inline-block;">
                                            <input type="hidden" name="pageSize" value="@Model.PageSize" />
                                            <input type="hidden" name="filter" value="@(Model.Filter ?? "")" />
                                            <input type="hidden" name="startDate" value="@(Model.StartDate?.ToString("yyyy-MM-dd") ?? "")" />
                                            <input type="hidden" name="endDate" value="@(Model.EndDate?.ToString("yyyy-MM-dd") ?? "")" />
                                            <select class="form-select form-select-sm page-select" name="page" onchange="document.getElementById('pageSelectForm').submit()">
                                                @for (int i = 1; i <= Model.TotalPages; i++)
                                                {
                                                    <option value="@i" selected="@(Model.CurrentPage == i)">@i / @Model.TotalPages</option>
                                                }
                                            </select>
                                        </form>
                                    </li>
                                    
                                    <li class="page-item @(!Model.HasNext ? "disabled" : "")">
                                        <form method="post" style="display: inline-block;">
                                            <input type="hidden" name="page" value="@(Model.CurrentPage + 1)" />
                                            <input type="hidden" name="pageSize" value="@Model.PageSize" />
                                            <input type="hidden" name="filter" value="@(Model.Filter ?? "")" />
                                            <input type="hidden" name="startDate" value="@(Model.StartDate?.ToString("yyyy-MM-dd") ?? "")" />
                                            <input type="hidden" name="endDate" value="@(Model.EndDate?.ToString("yyyy-MM-dd") ?? "")" />
                                            <button type="submit" class="page-link" @(!Model.HasNext ? "disabled" : "")>
                                                <i class="fas fa-angle-right"></i>
                                            </button>
                                        </form>
                                    </li>
                                    <li class="page-item @(!Model.HasNext ? "disabled" : "")">
                                        <form method="post" style="display: inline-block;">
                                            <input type="hidden" name="page" value="@Model.TotalPages" />
                                            <input type="hidden" name="pageSize" value="@Model.PageSize" />
                                            <input type="hidden" name="filter" value="@(Model.Filter ?? "")" />
                                            <input type="hidden" name="startDate" value="@(Model.StartDate?.ToString("yyyy-MM-dd") ?? "")" />
                                            <input type="hidden" name="endDate" value="@(Model.EndDate?.ToString("yyyy-MM-dd") ?? "")" />
                                            <button type="submit" class="page-link" @(!Model.HasNext ? "disabled" : "")>
                                                <i class="fas fa-angle-double-right"></i>
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </nav>
                        }
                    </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@if (Model.PunchRecordData != null && Model.PunchRecordData.Rows.Count > 0)
{
    <div class="row mt-4">
        <div class="">
            <div class="card">
                <div class="card-body px-0 pt-0 pb-2">
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0">
                            <thead>
                                <tr>
                                    <th class="text-uppercase text-secondary text-sm font-weight-bolder opacity-7">員工編號</th>
                                    <th class="text-uppercase text-secondary text-sm font-weight-bolder opacity-7">中文姓名</th>
                                    <th class="text-uppercase text-secondary text-sm font-weight-bolder opacity-7">部門</th>
                                    <th class="text-uppercase text-secondary text-sm font-weight-bolder opacity-7">工作日</th>
                                    <th class="text-uppercase text-secondary text-sm font-weight-bolder opacity-7">打卡類別</th>
                                    <th class="text-uppercase text-secondary text-sm font-weight-bolder opacity-7">表定時間</th>
                                    <th class="text-uppercase text-secondary text-sm font-weight-bolder opacity-7">打卡時間</th>
                                    <th class="text-uppercase text-secondary text-sm font-weight-bolder opacity-7">比對結果</th>
                                    <th class="text-uppercase text-secondary text-sm font-weight-bolder opacity-7">異常原因</th>
                                    <th class="text-uppercase text-secondary text-sm font-weight-bolder opacity-7">資料來源</th>
                                    <th class="text-uppercase text-secondary text-sm font-weight-bolder opacity-7">備註</th>
                                    <th class="text-uppercase text-secondary text-sm font-weight-bolder opacity-7">超時出勤</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (DataRow item in Model.PunchRecordData.Rows)
                                {
                                    <tr class="table-row-hover">
                                        <td>
                                            <div class="d-flex px-2 py-1">
                                                <div class="d-flex flex-column justify-content-center">
                                                    <h6 class="mb-0 text-sm">@item["emp_id"]</h6>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="d-flex px-2 py-1">
                                                <div class="d-flex flex-column justify-content-center">
                                                    <h6 class="mb-0 text-sm">@item["emp_name_zh"]</h6>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="d-flex px-2 py-1">
                                                <div class="d-flex flex-column justify-content-center">
                                                    <h6 class="mb-0 text-sm">@item["dept_name_zh"]</h6>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="d-flex px-2 py-1">
                                                <div class="d-flex flex-column justify-content-center">
                                                    <h6 class="mb-0 text-sm">
                                                        @if (item["work_date"] is DateTime dateValue)
                                                        {
                                                            @dateValue.ToString("yyyy-MM-dd")
                                                        }
                                                        else
                                                        {
                                                            @(item["work_date"]?.ToString() ?? "")
                                                        }
                                                    </h6>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="d-flex px-2 py-1">
                                                <div class="d-flex flex-column justify-content-center">
                                                    <h6 class="mb-0 text-sm">@item["clock_type"]</h6>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="d-flex px-2 py-1">
                                                <div class="d-flex flex-column justify-content-center">
                                                    <h6 class="mb-0 text-sm">@item["scheduled_time"]</h6>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="d-flex px-2 py-1">
                                                <div class="d-flex flex-column justify-content-center">
                                                    <h6 class="mb-0 text-sm">@item["punch_time"]</h6>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="d-flex px-2 py-1">
                                                <div class="d-flex flex-column justify-content-center">
                                                    <h6 class="mb-0 text-sm">@item["check_result"]</h6>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="d-flex px-2 py-1">
                                                <div class="d-flex flex-column justify-content-center">
                                                    <h6 class="mb-0 text-sm">@item["anomaly_resolution"]</h6>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="d-flex px-2 py-1">
                                                <div class="d-flex flex-column justify-content-center">
                                                    <h6 class="mb-0 text-sm">@item["data_source"]</h6>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="d-flex px-2 py-1">
                                                <div class="d-flex flex-column justify-content-center">
                                                    <h6 class="mb-0 text-sm">@item["remark"]</h6>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="d-flex px-2 py-1">
                                                <div class="d-flex flex-column justify-content-center">
                                                    <h6 class="mb-0 text-sm">@item["excessive_attendance"]</h6>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<style>
.table-row-hover {
    transition: all 0.2s ease-in-out;
    position: relative;
}

.table-row-hover:hover {
    background: linear-gradient(90deg, rgba(63, 94, 251, 0.1) 0%, rgba(252, 70, 107, 0.1) 100%);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    transform: translateY(-1px);
    z-index: 10;
}

.table-row-hover:hover td {
    border-color: rgba(63, 94, 251, 0.2);
}

/* Optional: Row selection style */
.table-row-hover.selected {
    background: linear-gradient(90deg, rgba(63, 94, 251, 0.15) 0%, rgba(252, 70, 107, 0.15) 100%);
    border-left: 4px solid #3f5efb;
}

/* Paging styles */
.page-select {
    width: auto;
    min-width: 100px;
    border: none;
    background: transparent;
    color: #495057;
    padding: 0.25rem 0.5rem;
}

.page-select:focus {
    border-color: #3f5efb;
    box-shadow: 0 0 0 0.2rem rgba(63, 94, 251, 0.25);
}

.pagination .page-link,
.pagination button.page-link {
    color: #495057;
    border-color: #dee2e6;
    padding: 0.25rem 0.5rem;
    background: none;
    border: 1px solid #dee2e6;
    cursor: pointer;
}

.pagination .page-link:hover,
.pagination button.page-link:hover {
    color: #3f5efb;
    background-color: #f8f9fa;
    border-color: #3f5efb;
}

.pagination .page-item.disabled .page-link,
.pagination .page-item.disabled button.page-link {
    color: #6c757d;
    background-color: #fff;
    border-color: #dee2e6;
    cursor: not-allowed;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const tableRows = document.querySelectorAll('.table-row-hover');
    
    tableRows.forEach(row => {
        row.addEventListener('mouseenter', function() {
            this.style.cursor = 'pointer';
        });
        
        row.addEventListener('click', function() {
            tableRows.forEach(r => r.classList.remove('selected'));
            this.classList.add('selected');
        });
    });
});

function clearStartDate() {
    const startDateInput = document.querySelector('input[name="startDate"]');
    startDateInput.value = '';
    startDateInput.removeAttribute('value');
    document.getElementById('filterForm').submit();
}

function clearEndDate() {
    const endDateInput = document.querySelector('input[name="endDate"]');
    endDateInput.value = '';
    endDateInput.removeAttribute('value');
    document.getElementById('filterForm').submit();
}

</script>
